#!/usr/bin/env ruby

# Optionally enable debug logging
ENV['SADVISOR_LOG'] = 'debug' if ARGV.include?('--debug') ||
                                 ARGV.include?('-d')

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'sadvisor'
require 'sadvisor/cli'

Sadvisor::SadvisorCLI.start ARGV
